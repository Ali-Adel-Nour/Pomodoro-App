<%- include('layouts.ejs') %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Settings - Pomodoro App</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <div class="container">
      <h1 class="title">Pomodoro App</h1>
      <h2 class="subtitle">Settings</h2>
      <form action="/save-settings" method="POST">
        <h3 class="form-section">Timer Settings</h3>
        <div class="form-field">
          <label for="pomodoro-length">Pomodoro Length (minutes)</label>
          <input type="number" name="pomodoro-length" id="pomodoro-length" value="25" min="1" max="120" required>
        </div>
        <div class="form-field">
          <label for="short-break-length">Short Break Length (minutes)</label>
          <input type="number" name="short-break-length" id="short-break-length" value="5" min="1" max="60" required>
        </div>
        <div class="form-field">
          <label for="long-break-length">Long Break Length (minutes)</label>
          <input type="number" name="long-break-length" id="long-break-length" value="15" min="1" max="120" required>
        </div>
        <div class="form-field">
          <label for="num-pomodoros-per-set">Number of Pomodoros per Set</label>
          <input type="number" name="num-pomodoros-per-set" id="num-pomodoros-per-set" value="4" min="1" max="10" required>
        </div>
        <h3 class="form-section">Appearance Settings</h3>
        <div class="form-field">
          <label for="theme">Theme</label>
          <select name="theme" id="theme" required>
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </div>
        <div class="form-field">
          <label for="font-size">Font Size</label>
          <select name="font-size" id="font-size" required>
            <option value="small">Small</option>
            <option value="medium">Medium</option>
            <option value="large">Large</option>
          </select>
        </div>
        <h3 class="form-section">Account Settings</h3>
        <div class="form-field">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" value="John Doe" required>
        </div>
        <div class="form-field">
          <label for="email">Email Address</label>
          <input type="email" name="email" id="email" value="johndoe@example.com" required>
        </div>
        <button type="submit">Save Changes</button>
      </form>
    </div>
  </body>
</html>
